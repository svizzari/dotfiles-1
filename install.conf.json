[
  {
    "clean": ["~"]
  },
  {
    "shell": [
      ["git update-submodules", "Installing/updating submodules"]
    ]
  },
  {
    "link": {
      "~/.ackrc":     "ackrc",
      "~/.gitignore": "gitignore",
      "~/.npmrc":     "npmrc",
      "~/.oh-my-zsh": "zsh/oh-my-zsh/",
      "~/.rspec":     "rspec",
      "~/.tmux.conf": "tmux.conf",
      "~/.vim":       "vim/",
      "~/.vimrc":     "vimrc",
      "~/.zshrc":     "zshrc",

      "~/Library/Application Support/Sublime Text 3/Packages/User/Preferences.sublime-settings": "preferences.sublime-settings"
    }
  }
]
