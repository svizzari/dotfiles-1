[
  {
    "clean": ["~"]
  },
  {
    "shell": [
      ["rm ~/.gitconfig", "Removing existing gitconfig"]
    ]
  },
  {
    "link": {
      "~/.dotfiles":  "",
      "~/.ackrc":     "ackrc",
      "~/.gitconfig": "gitconfig",
      "~/.gitignore": "gitignore",
      "~/.npmrc":     "npmrc",
      "~/.oh-my-zsh": "zsh/oh-my-zsh/",
      "~/.rspec":     "rspec",
      "~/.tmux.conf": "tmux.conf",
      "~/.vim":       "vim/",
      "~/.vimrc":     "vimrc",
      "~/.zshrc":     "zshrc"
    }
  },
  {
    "shell": [
      ["git update-submodules —-init —-recursive", "Installing/updating submodules"]
    ]
  }
]
